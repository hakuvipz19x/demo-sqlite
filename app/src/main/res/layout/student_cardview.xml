<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#CDDC39"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/male_icon"
                android:id="@+id/img_gender"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_idname"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:text="Nguyen Quang Anh - 01"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/img_gender"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_age"
                android:text="Age: 22"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/txt_idname"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_mark"
                android:layout_marginLeft="30dp"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/txt_idname"
                app:layout_constraintLeft_toRightOf="@id/txt_age"
                android:text="Mark: 5.0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_dateCreated"
                android:layout_marginLeft="30dp"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/txt_idname"
                app:layout_constraintLeft_toRightOf="@id/txt_mark"
                android:text="Date: 16/05/2021"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>